{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

 {% block stylesheets %}
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/dashboard.css">
 {% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>        
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th>{{ user.id }}</th>
                <th>{{ user.email }}</th>
                <th>{{ user.roles ? user.roles|json_encode : '' }}</th>
                <th>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </th>
            </tr>
        {% else %}
            <tr>
                <th colspan="5">no records found</th>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>

        <div class="bottom__param">
       <a class="topnav__link" href="#"><img src="../images/report.png" width="20px"></a>
       <a class="topnav__link" href="{{ path('classes_index') }}" ><img src="../images/classe.png" width="20px"></a>
       <a class="topnav__link" href="{{ path('user_index') }}"><img src="../images/user.png" width="20px"></a>
    </div>
{% endblock %}
